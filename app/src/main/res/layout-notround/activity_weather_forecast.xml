<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".WeatherForecast"
android:layout_marginTop="27dp"
android:layout_marginBottom="27dp"
android:layout_marginLeft="48dp"
android:layout_marginRight="48dp"
    >

<ProgressBar
    android:id="@+id/progressBar_weatherQuery"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="invisible"/>

<ImageView
    android:id="@+id/imageView_weather"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<TextView
    android:id="@+id/textView_currentTemp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="20sp" />

<TextView
    android:id="@+id/textView_minTemp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="20sp" />

<TextView
    android:id="@+id/textView_maxTemp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="20sp" />

<TextView
    android:id="@+id/textView_UVRating"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="20sp" />
</LinearLayout>